{
"name" : "Metrify",
"description" : "Quickly convert Imeprial units to Metric units on a webpage",

"version" : "1.1.0.01",
"manifest_version": 2,
"permissions":[ "activeTab", "storage"],

"icons":{
  "48":"icon.png"
},

"browser_action":{
"default_icon": "icon.png",
"default_title" : "Change units?"
},

"background":
  {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }

}
